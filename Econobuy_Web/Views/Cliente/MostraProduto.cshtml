@model Econobuy_Web.Models.CarrinhoTrad

@{
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    if (Session["clienteID"] == null)
    {
        Response.Redirect("~/Cliente/Index");
    }
    ViewBag.Title = Model.Nome;
}



@using (Html.BeginForm("AdicionaAoCarrinhoTrad", "Cliente"))
{
    @Html.AntiForgeryToken()

    <div class="col-md-10">
        <div class="row">
            <div class="col-md-10">
                <button type="button" class="btn btn-outline-warning active  text-white text-decoration-none">
                    @Html.ActionLink("Voltar a lista", "ListarProdutosModoTradicional", new { id = Convert.ToInt32(Session["mercadoTradID"]), search = "" }, new { @style = "color: white; text-decoration:none; " })
                </button>
            </div>
        </div>
        <hr />
        <div class="row"><div class="col-md-10"><img src="/Cliente/MostraImagemProduto/@Model.ProdID" alt="" height="200" /></div></div>


        <br />
        <div class="row"> <div class="col-md-10"><h5>@Html.DisplayNameFor(model => model.Nome)</h5></div></div>

        <div class="row">
            <div class="col-md-10">@Html.DisplayFor(model => model.Nome)</div>
            @Html.HiddenFor(model => model.Nome)
        </div>
        <br />
        <div class="row">
            <div class="col-md-10"><h5>@Html.DisplayNameFor(model => model.Descricao)</h5></div>
        </div>

        <div class="row">
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Descricao)
            </div>
            @Html.HiddenFor(model => model.Descricao)
        </div>
        <br />
        <div class="row">
            <div class="col-md-10"><h5>@Html.DisplayNameFor(model => model.Valor)</h5></div>
        </div>

        <div class="row">
            <div class="col-md-10">R$ @Html.DisplayFor(model => model.Valor)</div>
            @Html.HiddenFor(model => model.Valor)
        </div>

        @Html.HiddenFor(model => model.Cat01)

        @Html.HiddenFor(model => model.Cat02)

        @Html.HiddenFor(model => model.Cat03)

        @Html.HiddenFor(model => model.ProdID)


        <div class="row" style="margin-top: 50px">
            <div class="col-md-2"><h5>Quantidade:</h5></div>
            <div class="col-md-1">
                @Html.TextBoxFor(model => model.Qtde, new { type = "number", min = "1", max = "50" })
            </div>

            <div class="col-md-3">
                <input type="submit" name="submitButton" value="Adicionar ao carrinho" class="btn btn-primary" style="margin-left:20px" />
            </div>

        </div>
    </div>
}
