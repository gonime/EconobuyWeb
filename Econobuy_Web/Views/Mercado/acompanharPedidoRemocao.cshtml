@model Econobuy_Web.Models.PedidoRemocao

@{
    Layout = "~/Views/Shared/_LayoutMercado.cshtml";
    if (Session["mercadoID"] == null)
    {
        Response.Redirect("~/Mercado/Index");
    }
    ViewBag.Title = "acompanharPedidoRemocao";
}


    <div class="col-md-10">
        <h4>Pedido de Remoção</h4>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <h5>Sua mensagem</h5>
            </div>

            <div class=" col-md-12">
                @Html.DisplayFor(model => model.MsgRequisitante)
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <h5>Mensagem Administrador</h5>
            </div>

            <div class=" col-md-12">
                @if (Model.Status != "Em análise")
                {@Html.DisplayFor(model => model.MsgAdmin)}
            else
            { <p>Pedido em análise</p>}
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-md-6">
                <h5>Status</h5>
            </div>
            <div class="col-md-6">
                <h5>Nota Recebida</h5>
            </div>

            <div class=" col-md-6">
                @Html.DisplayFor(model => model.Status)
            </div>

            <div class=" col-md-6">
                @Html.DisplayFor(model => model.NotaAvaliacao)
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-md-12">
                <h5>Descrição da avaliação</h5>
            </div>

            <div class=" col-md-12">
                @Html.DisplayFor(model => model.DescricaoAvaliacao)
            </div>
        </div>
    </div>
